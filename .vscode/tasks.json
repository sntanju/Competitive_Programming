{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run C++ File",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++20",
                "-Wall",
                "-Wextra",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
